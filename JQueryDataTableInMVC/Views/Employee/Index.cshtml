<table id="employeeTable" class="table table-striped table-bordered" style="border:double; padding:inherit">

    <thead>
        
        <tr style="background-color:aquamarine;">
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Salary</th>

        </tr>
    </thead>
    <tfoot>
        <tr style="background-color:aquamarine;">
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Salary</th>
        </tr>
    </tfoot>
</table>
<div class="center-div" style="text-align:right">
    </br>
    <input type="button" class="btn-success" value="Nominate »" id="btn-nominate" />
</div>

