    <script>
        $(document).ready(function () {

            $("#employeeTable").DataTable(
                {
                    "ajax": {
                        "url": "/Employee/GetList",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "Name" },
                        { "data": "Position" },
                        { "data": "Office" },
                        { "data": "Age" },
                        { "data": "Salary" }
                    ]

                });


            $("#btn-nominate").click(function () {
                alert("Employee nominated");
                location.replace("https://www.w3schools.com")

            });

        });

    </script>

}