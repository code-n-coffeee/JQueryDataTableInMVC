@{
    ViewBag.Title = "Employee List";
}

<h4 style="text-align:center"><u>Employee Details</u></h4>
<a href="~/Views/Shared/_Layout.cshtml"></a>

@*Normal and ThemeRoller
    <table id="employeeTable" class="display">
